<%= form_with url: mentals_path, id: "question-form", local: true do |form| %>
    <div class="question-text" >
        <%= @form.question_text %>
    </div>

    <div class="options-container">
    <% @choices.each do |option| %>
        <label class="option-label">
            <input type="radio" name="selected_option" value="<%= option %>" class="auto-submit">
        <div class="option-box">
            <%= option %>
        </div>
        </label>
    <% end %>
    </div>

    <div>
    <%= form.submit "送信", class: 'btn btn-primary custom-btn' %>
    </div>
<% end %>